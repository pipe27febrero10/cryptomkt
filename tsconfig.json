{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "paths" : {
      "@coin/*" : ["coin/*"],
      "@exchange/*" : ["exchange/*"],
      "@cryptomkt/*" : ["cryptomkt/*"],
      "@user/*" : ["user/*"],
      "@poloniex/*" : ["poloniex/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
